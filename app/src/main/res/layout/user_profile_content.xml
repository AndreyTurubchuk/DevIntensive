<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_light"
            android:textColor="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_small_24"
            android:paddingTop="@dimen/size_small_24">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rating_vt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Рейтинг"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/countStrTotal_vt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Количество строк кода"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/countProectTotal_vt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Проектов"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="25"
                android:layout_height="match_parent"
                android:background="@color/grey_light">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="50"
                android:layout_height="match_parent"
                android:background="@color/grey">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="25"
                android:layout_height="match_parent"
                android:background="@color/grey_light">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginLeft="@dimen/size_small_24"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_medial_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Мобильный"
                        android:inputType="phone"
                        android:text="8-911-592-00-00"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/call_img"
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/ic_phone_in_talk_black_24dp"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_medial_32"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72">
        </View>

        <!-- E-mail -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/ic_email_black_24dp"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginLeft="@dimen/size_small_24"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_medial_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/email_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        android:text="example@rambler.ru"
                        android:enabled="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:focusable="false"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/ic_send_black_24dp"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_medial_32"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72">
        </View>

        <!-- Профиль в Контакте -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/vk_circle"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginLeft="@dimen/size_small_24"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_medial_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/profileVK_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Профиль в VK"
                        android:inputType="text"
                        android:text="vk.com/id61945333"
                        android:enabled="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/eye"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_medial_32"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72">
        </View>

        <!-- Репозиторий -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/github_circle"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginLeft="@dimen/size_small_24"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_medial_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/repo_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Репозиторий"
                        android:inputType="text"
                        android:text="https://github.com/AndreyTurubchuk/DevIntensive"
                        android:enabled="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/eye"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_medial_32"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72">
        </View>

        <!-- Обо мне -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/account_circle"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginLeft="@dimen/size_small_24"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_medial_32"
                android:layout_marginRight="@dimen/spacing_normal_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/aboutMe_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Обо мне"
                        android:inputType="textMultiLine"
                        android:focusable="false"
                        android:text="Мой дядя самых честных правил,
                                  Когда не в шутку занемог,
                                  Он уважать себя заставил И лучше выдумать не мог.
                                  Его пример другим наука; Но, боже мой, какая скука
                                  С больным сидеть и день и ночь,
                                  Не отходя ни шагу прочь!
                                  Какое низкое коварство
                                  Полуживого забавлять,
                                  Ему подушки поправлять,
                                  Печально подносить лекарство,
                                  Вздыхать и думать про себя:
                                  Когда же черт возьмет тебя!"
                        android:enabled="true"
                        android:textColor="@color/black"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/size_small_24"
                android:layout_height="@dimen/size_small_24"
                android:src="@drawable/eye"
                android:layout_marginTop="@dimen/size_small_24"
                android:layout_marginRight="@dimen/size_medial_32"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_line"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_larger_72">
        </View>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
